<h1>Create an Article</h1>

<% if @article.errors.any? %>
<h3>The following errors where found:</h3>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>

<% end %>



<%= form_for @article do |f| %>
<p
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :descrption %><br>
  <%= f.text_area :descrption %>
</p>

<p>
<%= f.submit%>
</p>


<% end %>
